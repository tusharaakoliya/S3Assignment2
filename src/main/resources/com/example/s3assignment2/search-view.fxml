<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" stylesheets="@../../../styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.s3assignment2.controller.SearchViewController">
    <children>
        <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="Total FDA Recall" />
                        <TextField fx:id="searchTextField" promptText="Enter Recall Numbers Want To See" />
                        <Button mnemonicParsing="false" onAction="#getSearchResults" text="Search" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" />
                    </padding>
                </HBox>
            </top>
            <left>
                <ListView fx:id="initialMovieDataListView" prefHeight="453.0" prefWidth="542.0" BorderPane.alignment="CENTER" />
            </left>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <right>
                <StackPane BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="getDetailsButton" mnemonicParsing="false" onAction="#getFDARecallDetails" text="Get More Detials -&gt;" />
                    </children>
                </StackPane>
            </right>
            <bottom>
                <Label fx:id="errMsgLabel" text="Recalls not found" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets top="20.0" />
                    </BorderPane.margin>
                </Label>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
